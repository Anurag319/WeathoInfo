    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
    <script>
        let getCurrentDay = ()=> {
            let weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Thursday";
            weekday[4] = "Friday";
            weekday[5] = "Saturday";
            weekday[6] = "Sunday";

            let Month = new Array("Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec")

            let currTime = new Date();
            console.log(currTime)
            let today = weekday[currTime.getDay()];
            let day = document.getElementById('day');
            let today_date = document.getElementById('today_date');
            day.innerText = today;
            today_date.innerText = currTime.getDate() + " " + Month[currTime.getMonth()];
        }

        getCurrentDay(); 
    </script>
</body>

</html>